<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context="ui.login.ProfileActivity">



    <androidx.cardview.widget.CardView
        android:id="@+id/spinner3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#A277D7"
        app:cardCornerRadius="600dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/btnBackProfile"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:background="@drawable/back"
            android:dropDownWidth="200dp"
            android:gravity="center"
            android:onClick="showPopup"
            tools:ignore="DuplicateIds"></ImageButton>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.ProfileActivity"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/btnAvatar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dp"
            android:backgroundTint="@color/black"
            android:text="Select Avatar"
            android:textColor="#A277D7"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/ImageAvatar"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="50dp" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
